<div id="trip_show" >
  <%= render :partial => 'nav' %>
  <%= render :partial => 'trip_options' %>
  <div class="trip_details">
    <div id="trip_title">
      <span><%= link_to @trip.origin[0..@trip.origin.rindex(",")-1], home_show_path({:origin => @trip.origin}) %></span>
      to
      <span><%= link_to @trip.destination[0..@trip.destination.rindex(",")-1], home_show_path({:destination => @trip.destination}) %></span>
    </div>
    <% if @trip.summary %>
      <div id="summary" class="edit_summary"><%= @trip.summary %></div>
    <% end %>
  </div>

</div>
