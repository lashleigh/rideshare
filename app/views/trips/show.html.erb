<%= javascript_include_tag 'polylineEdit' %>
<%= javascript_include_tag 'map_for_trip' %>
<script type="text/javascript">
  var trip = <%= @trip.to_json.html_safe %>;
  var trips = <%= @trips.to_json.html_safe %>;
  var cities_hash = <%= @cities_hash.to_json.html_safe %>;
  var avail_places = <%= @avail_places.to_json.html_safe %>;
</script>

<div id="map_container"> </div>

<div class="ui-widget">
  <label for="tags">Tags: </label>
  <input id="tags">
</div>

<p id="notice"><%= notice %></p>

<% form_for(@trip) do |f| %>
  <div class="field">
    <% @trip.route.each do |r| %>
      <%= select("place", r,  Place.all.collect {|p| [ p.address, p.id ] }, { :selected => r }, :class => "city_select") %>
    <% end %>
    <%= f.label :has_car %><br />
    <%= f.check_box :has_car %>
  </div>
  <%= f.submit 'Save check box' %>
<% end %>
<input id="save_trip" type="button" value="Save" onclick="saveTrip()">

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
