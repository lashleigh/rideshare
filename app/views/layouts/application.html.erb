<!DOCTYPE html>
<html>
<head>
  <title>Rideshare</title>
  <%= stylesheet_link_tag 'reset' %>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'css3buttons' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.14.custom' %>
  <link rel="stylesheet/less" type="text/css" href="/stylesheets/application.less">

  <%= javascript_include_tag 'jquery-1.6.2.min', 'jquery.rails', 'less-1.1.3.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.14.custom.min', 'application', 'jquery.jeditable.mini' %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrapper">
    <%= render 'shared/header' %>
    <section id="content">
      <div class="centered_shadowed_container">
        <%= yield %>
      </div>
    </section>
  </div>
  <%= render 'shared/footer' %>
</body>
</html>
