  <div class="first vcard">
    <% @user.vcard_attributes.each do |att, val| %>
      <dl>
        <dt><%=att%></dt>
        <dd class="fn"><%= val%></dd>
      </dl>
    <% end %>
    <dl>
      <dt>Last Login</dt>
      <dd class="fn"><%= time_ago_in_words(@user.updated_at)%> ago</dd>
    </dl>
  </div>
  <div class="last">
    <ul class="stats">
      <li>
      <a href="/lashleigh/repositories">
        <strong><%= @user.trips.length%></strong>
