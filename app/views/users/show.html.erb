<div class="columns profilecols">
  <div class="first vcard">
    <%= image_tag @user.image %>
    <% @user.vcard_attributes.each do |att, val| %>
      <dl>
        <dt><%=att%></dt>
        <dd class="fn"><%= val%></dd>
      </dl>
    <% end %>
    <dl>
      <dt>Website </dt>
      <dd class="fn"><%= link_to @user.pretty_website, @user.website %></dd>
    </dl>
    <dl>
      <dt>Last Login</dt>
      <dd class="fn"><%= time_ago_in_words(@user.updated_at)%> ago</dd>
    </dl>
  </div>
  <div class="last">
    <ul class="stats">
      <li>
      <a href="/lashleigh/repositories">
        <strong><%= @user.trips.length%></strong>
        <span>planned trips</span>
      </a>
      </li>
      <li>
      <a href="/lashleigh/repositories">
        <strong><%= @user.trips.length%></strong>
        <span>completed trips</span>
      </a>
      </li>
    </ul>
    <div class="following">
      <h3>Following 1 traveler and watching 32 trips <a href="/lashleigh/following">view all â†’</a></h3>
      <ul class="avatars">

        <li>
        <a href="/bensonk" rel="contact" title="bensonk"><img src="https://secure.gravatar.com/avatar/453ee9213b4ca3c2b0d848aeebeaee04?s=140&amp;d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-140.png" alt="" width="24" height="24"></a>
        </li>

      </ul>
    </div>
  </div>
</div>
<div class="rule"></div>
<div class="columns profilecols">
  <div class="first">
    <div id="tripslist">
      <div class="tripsheader">
        <h3>Your Trips (<%= @user.trips.length%>)</h3>
      </div>
      <%= render :partial => 'trips/trip', :collection => @user.trips  %>
    </div>
  </div>
  <div class="last">
    <h2>Recent Activity(<%= @user.trips.length%>)</h2>
  </div>
</div>

<%= link_to "New Trip", new_trip_path %>
